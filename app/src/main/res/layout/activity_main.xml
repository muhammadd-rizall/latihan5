<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tugas 5"
            android:textSize="45dp"
            android:textAlignment="center"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="30dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnsuhu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="konversi suhu"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/btnDiskon"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="diskon belanja"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/btnbangun"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Bangun ruang"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/btnbilangan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Bilangan"
            android:layout_marginTop="15dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>